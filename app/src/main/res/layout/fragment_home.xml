<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarHome"
            android:background="@color/toolbarColor"
            >
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:text="SAPHI TECNOLOGIES SAC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                </LinearLayout>

            </Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:layout_below="@id/toolbarHome"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.3"/>

        <LinearLayout
            android:background="@color/colorAppBaground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/toolbarHome"
            >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <EditText
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:id="@+id/etSearchHome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_weight="8"
                        android:background="@drawable/shape_search"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="7dp"
                        android:hint="Que estas buscando?"
                        android:inputType="text"
                        android:padding="10dp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingStart="12dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                android:clickable="true"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:text="COMIDA"
                                    />

                                <ImageView
                                    android:id="@+id/ivHomeFragmentFood"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@drawable/shop_type_food"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingStart="6dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:text="TECNOLOGIA"
                                    />

                                <ImageView
                                    android:id="@+id/ivHomeFragmentTecnology"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@drawable/shop_type_tecnology"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingStart="12dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:text="ECONOMIA"
                                    />

                                <ImageView
                                    android:id="@+id/ivHomeFragmentEconomy"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@drawable/shop_type_economy"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingStart="12dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:text="MAYORISTAS"
                                    />

                                <ImageView
                                    android:id="@+id/ivHomeFragmentMayorism"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@drawable/shop_type_food"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingStart="12dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:text="MINORISTAS"/>

                                <ImageView
                                    android:id="@+id/ivHomeFragmentMinorism"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@drawable/shop_type_tecnology"/>
                            </LinearLayout>

                        </LinearLayout>
                        <Space
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>

            </ScrollView>
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>